use_xft yes
xftfont Sans:size=8
xftalpha 0.1
update_interval 2
total_run_times 0
own_window yes
own_window_type override
own_window_argb_visual yes
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 250 150
maximum_width 520
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
alignment top_right
# gap_x 1120
# gap_y 850
# gap_x 50
# gap_y 50
no_buffers no
uppercase no
cpu_avg_samples 2
net_avg_samples 1
override_utf8_locale yes
#use_spacer yes

# Hour/minutes
color1 DDCCAA
# Dots
color2 948873
# Date
color3 948873

default_shade_color 36333E
default_outline_color C3C3C3

TEXT
${voffset 10}${color1}${font Helvetica:pixelsize=110}${time %H}${color2}:${color1}${time %M}${font}${voffset -65}${offset 10}${color3}${font Helvetica:pixelsize=32}${time %d} ${font Helvetica:pixelsize=32}${time  %b} ${time %Y}${font}${voffset 20}${font Helvetica:pixelsize=42}${offset -178}${time %A}${font}
